{
  "preset": "ts-jest",
  "testMatch": [
    "**/spec/**/*.ts"
  ],
  "bail": true,
  "testEnvironment": "node",
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json",
    "ts",
    "tsx"
  ],
  "testPathIgnorePatterns": [
    "/.tmp/",
    "/dist/"
  ],
  "coverageReporters": [
    "lcov"
  ],
  "reporters": [
    "jest-spin-reporter"
  ],
  "collectCoverageFrom": [
    "src/**/*.{ts, tsx}",
    "!**/*.d.ts"
  ],
  "coveragePathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/spec/.*\\.(ts|js)$",
    "<rootDir>/build/.*\\.(ts|js)$",
    "./src/environment.ts"
  ]
}